<div class="item group">
    <h3>Your Past Events</h3>
    <ul>
     {{#each userEvents}}
      {{#ifCond this.is_past '==' 1}}
      <li>Event Name: {{this.name}}</li>
      <li>Event Date/Time: {{this.date_time}}</li>
      <li>Event Address: {{this.event_street}}, {{this.event_city}}, {{this.event_state}}, {{this.event_zip_code}}</li>
      
      <div id="submit-review" class="item group">
    <h3>Submit A Review For {{this.name}}</h3>
    <form id="reviewSub" action='/add-review' method="post">
    <input type="hidden" name="reviewer_id" value={{this.userId}}/>
    <input type="hidden" name="event_id" value={{this.id}} />
      <div class="field">
        <select id="rating" class="socialOptions" name="rating" required>
          <option value="" selected>Select Rating (1:Lowest, 5: Highest) *</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <div class="field">
        <label>Comments</label>
        <textarea name="comments" id="comments" rows="5" required></textarea>
      </div>
      <button class="button button-block" id="submitReview">Submit Review</button>
    </form>
  </div>
      {{/ifCond}}
      {{/each}}
    </ul>
  </div>
